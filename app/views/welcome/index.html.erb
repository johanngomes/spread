  <script>

      var loc = [[-8.05449,-34.88130188080839, 'Recife', 1], [-8.16200, -35.0053, 'Jaboatão dos Guararapes', 2], [-7.995, -34.8553, 'Olinda', 3]];
      var myCenter=new google.maps.LatLng(-8.05449,-34.88130188080839);

      function initialize()
      {
          var mapProp = {
              center:myCenter,
              zoom: 10,
              draggable: false,
              scrollwheel: false,
              mapTypeId:google.maps.MapTypeId.ROADMAP
          };

          var map=new google.maps.Map(document.getElementById("map-container"),mapProp);

          for (var i = 0; i < loc.length; i++) {
              var location = loc[i];
              var myLatLng = new google.maps.LatLng(location[0], location[1]);

              var marker=new google.maps.Marker({
                  position:myLatLng,
                  url: '/',
                  map: map,
                  animation:google.maps.Animation.DROP
              });

              marker.setMap(map);

              info_Window(location, marker, map);

          }
      }

      function info_Window(location, marker, map){
          var contentString = '<div id="content">'+
                  '   <H3>Discriminação</H3>' +
                  '   <p>Cidade: ' + location[2] + '</p>' +
                  '   <br>' +
                  '   <p>blá blá blá</p>'
          '</div>';

          var infowindow = new google.maps.InfoWindow({
              content: contentString
          });

          google.maps.event.addListener(marker, 'click', function() {
              infowindow.open(map,marker);
          });
      }

      google.maps.event.addDomListener(window, 'load', initialize);
      google.maps.event.addListener(marker, 'click', function() {window.location.href = marker.url;});
  </script>
